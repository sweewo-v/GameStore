@using Microsoft.AspNetCore.Http.Extensions
@model GameStore.Domain.Models.Cart
<div class="">
    @if (Model.Lines.Any())
    {
        <small class="navbar-text">
            <b>Your cart:</b>
            @Model.Lines.Sum(x => x.Quantity) item(s)
            $@(Math.Round(Model.ComputeTotalValue(), 2))
        </small>
    }
    <a class="btn btn-sm btn-secondary navbar-btn"
       asp-controller="Cart" asp-action="Index"
       asp-route-returnurl="@ViewContext.HttpContext.Request.GetEncodedPathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>