@model IEnumerable<GameStore.Application.ViewModels.Category.CategoryViewModel>

@{
    ViewData["Title"] = "Home";
}

<div class="py-5">
    <div class="container">
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-4 shadow-block">
                    <div class="card mb-4 shadow shadow-block">
                        <a
                           asp-action="Index"
                           asp-controller="Game"
                           asp-route-category="@category.Name">
                            <svg class="bd-placeholder-img card-img-top"
                                 width="100%" height="200"
                                 preserveAspectRatio="xMidYMid slice" focusable="false" role="img">
                                <rect width="100%" height="100%" fill="#55595c"></rect>
                                <text x="20%" y="50%" fill="#ffffff" class="text-wrap">@category.Name</text>
                            </svg>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>