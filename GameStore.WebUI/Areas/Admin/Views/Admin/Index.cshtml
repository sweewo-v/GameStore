@model GameStore.Application.ViewModels.Admin.AdminIndexViewModel

@{
    ViewData["Title"] = "Admin";
}

<div class="text-center">
    <h1 class="display-4">Welcome to admin panel</h1>
</div>

@if (!Model.Categories.Any() && !Model.Games.Any())
{
    <div class="text-center my-3">
        <form asp-action="SeedDatabase" method="post">
            <button type="submit" class="btn btn-dark">Seed Database</button>
        </form>
    </div>
}
else
{
    <div class="row">
        <div class="col-8">
            <div class="text-center">
                <span>Games</span>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Games.FirstOrDefault().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Games.FirstOrDefault().Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Games.FirstOrDefault().Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Games.FirstOrDefault().Categories)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Categories.FirstOrDefault().AddedDateTime)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Games)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Categories)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AddedDateTime)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-right">
                <a asp-area="Admin" asp-controller="Game" asp-action="Index">more</a>
            </div>
        </div>

        <div class="col-4">
            <div class="text-center">
                <span>Categories</span>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Categories.FirstOrDefault().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Categories.FirstOrDefault().AddedDateTime)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AddedDateTime)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-right">
                <a asp-area="Admin" asp-controller="Category" asp-action="Index">more</a>
            </div>
        </div>
    </div>
}
