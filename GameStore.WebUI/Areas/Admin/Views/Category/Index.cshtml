@model IEnumerable<GameStore.Application.ViewModels.Category.CategoryViewModel>

@{
    ViewData["Title"] = "Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddedDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedDateTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-dark">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-dark">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="text-center my-1">
    <a asp-action="Create" class="btn btn-primary btn-dark">Add Category</a>
</div>